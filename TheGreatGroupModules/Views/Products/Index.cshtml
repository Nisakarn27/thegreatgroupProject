
@{
    ViewBag.Title = "จัดการข้อมูลสินค้า";
    ViewBag.MainMenu = "ตั้งต่าระบบ";
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}

<div class="row bg-title">
    <!-- .page title -->
    <div class="col-md-5">
        <ol class="breadcrumb pull-left">
            <li><a href="#">@ViewBag.MainMenu</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </div>
    <!-- /.page title -->
    <!-- <a href="javascript:history.back();" class="btn btn-default pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light"><i class="fa fa-mail-reply"></i> ย้อนกลับ</a> -->
</div>

<div class="row">
    <div class="col-lg-12 ">

        <div class="white-box">
            <a onclick="NewProduct()" class="btn btn-info pull-right"><i class="fa fa-plus"></i> เพิ่มสินค้า</a>
            <h3 class="m-b-0 m-t-0"> <i class="fa fa-cart-plus"></i> @ViewBag.Title</h3> <small class="text-muted db"></small>
            <hr>

            <div id="toast"></div>
            <div id="loadIndicator"></div>
            <div id="gridContainer"></div><br>



        </div>
    </div>
</div>


@section Scripts {

    <!-- Date Picker Plugin JavaScript -->
