@{
    ViewBag.Title = "Login";
    ViewBag.MainMenu = "ระบบจัดการสมาชิก";
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}
<div class="preloader">
    <div class="cssload-speeding-wheel"></div>
</div>
<section id="wrapper" class="new-login-register">
    <div class="lg-info-panel">
        <div class="inner-panel">
            @*<a href="javascript:void(0)" class="p-20 di"><img src="../Template/plugins/images/admin-logo.png"></a>*@
            <div class="lg-content">
                @*<h2>THE ULTIMATE & MULTIPURPOSE ADMIN TEMPLATE OF 2017</h2>
                <p class="text-muted">with this admin you can get 2000+ pages, 500+ ui component, 2000+ icons, different demos and many more... </p>
                <a href="#" class="btn btn-rounded btn-danger p-l-20 p-r-20"> Buy now</a>*@
            </div>
        </div>
    </div>
    <div class="new-login-box">
        <div class="white-box">
            <h3 class="box-title m-b-0" style="font-weight:700;">บริษัท เดอะ เกรท กรุ๊ป จำกัด</h3>
            <small>เข้าสู่ระบบ</small>
            <form class="form-horizontal new-lg-form" id="loginform" action="LogIn">

                <div class="form-group  m-t-20">
                    <div class="col-xs-12">
                        <label> รหัสพนักงาน </label>
                        <input class="form-control" type="text" required=""  name="StaffCode" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <label> รหัสผ่าน </label>
                        <input class="form-control" type="password" required="" name="StaffPassword" placeholder="">
                    </div>
                </div>
                <p class="text-danger">@TempData["error"] </p>  
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class="btn btn-info btn-lg btn-block btn-rounded text-uppercase waves-effect waves-light" type="submit">เข้าสู่ระบบ</button>
                   </div>
                </div>


            </form>
            <form class="form-horizontal" id="recoverform" action="index.html">
                
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" type="text" required="" placeholder="Email">
                    </div>
                </div>
           
            </form>
        </div>
    </div>


</section>

